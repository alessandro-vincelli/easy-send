<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0" metadata-complete="true"
>
	<display-name>youeat.org</display-name>
	<description>Wiki and social network to share food experiences</description>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:application-context*.xml
        </param-value>
	</context-param>

	<!-- Used by Spring Log4jConfigListener -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>root-FeedWebApp</param-value>
	</context-param>
	
	<!-- Used by Spring Log4jConfigListener -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/META-INF/log4j.properties</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
    
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
	        
    <filter>
		<filter-name>Wicket</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>	
		</init-param>
	</filter>
    
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
		
	<filter-mapping>
		<filter-name>Wicket</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
</web-app>